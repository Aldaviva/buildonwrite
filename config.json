{
	"logLevel": "log",
	"builds": [
		{
			"name": "Skinny JS",
			"baseDir": "/var/www/rivet/bjn/media/browserdev",
			"trigger": {
				"path": "src/scripts",
				"include": ["*.js"],
				"exclude": []
			},
			"action": "ant lint js"
		},
		{
			"name": "Skinny CSS",
			"baseDir": "/var/www/rivet/bjn/media/browserdev",
			"trigger": {
				"path": "src/styles",
				"include": ["*.less"],
				"exclude": ["sprites.less"]
			},
			"action": "ant css"
		},
		{
			"name": "Skinny Sprites",
			"baseDir": "/var/www/rivet/bjn/media/browserdev",
			"trigger": {
				"path": "src/images",
				"include": ["*.png"],
				"exclude": ["sprites.png", "sprites.png.uncompressed.png"]
			},
			"action": "ant sprites css"
		}
	]
}